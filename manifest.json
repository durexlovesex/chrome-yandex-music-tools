{
  "name": "Ya.Music Helper",
  "version": "1.0",
  "description": "Bunch of tools for Yandex Music!",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "code/background.js"
    ],
    "persistent": false
  },
  "permissions": ["downloads"],
  "browser_action": {
    "default_popup": "code/popup.html",
    "default_icon": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    }
  },
  "content_scripts": [
    {
      "js": [
        "code/tools.js",
        "code/foreground.js"
      ],
      "matches": [
        "http://music.yandex.ru/*",
        "https://music.yandex.ru/*"
      ],
      "run_at": "document_idle"
    }
  ]
}
